<h1>Colleges and Universities with Data Science Degrees</h1>
<p>
  Download:
  <%= link_to "CSV", schools_path(format: "csv") %> |
  <%= link_to "JSON", schools_path(format: "json") %>
</p>
<table id="colleges_table" class='table table-striped table-hover'>
  <thead>
    <tr><th>College(Program)</th><th>Degree</th><th>Country</th><th>State(if USA)</th><th>Online</th><th>On-campus</th><th>Department</th> </tr>
  </thead>
  <tbody>
  <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %> (<%= link_to school.program, school.url, title:school.name+' '+school.degree+' in '+school.program  %>)</td>
      <td> <%= school.degree %></td>
      <td> <%= school.country %></td>
      <td> <%= school.state %></td>
      <td> <%= school.online %></td>
      <td> <%= school.oncampus %></td>
      <td> <%= school.department %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<script>
  $(document).ready( function () {
    $('#colleges_table').DataTable({
        "paging":   false
    } );
} );
</script>